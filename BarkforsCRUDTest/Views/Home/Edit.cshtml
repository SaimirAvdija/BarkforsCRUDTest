@model VehicleEditViewModel

@{
    ViewBag.Title = "Edit Vehicle";
}

<form asp-controller="Home" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id"/>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="LicencePlateNumber" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <input asp-for="LicencePlateNumber" class="form-control" />
            <span asp-validation-for="LicencePlateNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="ModelName" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <input asp-for="ModelName" class="form-control" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="Brand" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <select asp-for="Brand" asp-items="Html.GetEnumSelectList<Brand>()" class="form-select form-select-sm-2"></select>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="TypeOfFuel" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <select asp-for="TypeOfFuel" asp-items="Html.GetEnumSelectList<TypeOfFuel>()" class="form-select form-select-sm-2"></select>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="VehicleColor" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <select asp-for="VehicleColor" asp-items="Html.GetEnumSelectList<VehicleColor>()" class="form-select form-select-sm-2"></select>
        </div>
    </div>
    <div>
        <div class="form-group row" style="margin-top:5px">
            <label asp-for="VehicleEquipment" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
            <div class="col-sm-10">
                <select asp-for="VehicleEquipment" asp-items="Html.GetEnumSelectList<VehicleEquipment>()" class="form-select form-select-sm-2"></select>
            </div>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>