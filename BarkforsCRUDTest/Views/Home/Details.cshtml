@model HomeDetailsViewModel

@{
    ViewBag.Title = "Car Details";
}
<form method="post">
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Vehicle.ModelName</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail" src="~/images/car.jpg" />

                    <h4>Vehicle ID : @Model.Vehicle.Id</h4>
                    <h4>Licence Plate Number : @Model.Vehicle.LicencePlateNumber</h4>
                    <h4>Model Name : @Model.Vehicle.ModelName</h4>
                    <h4>Brand : @Model.Vehicle.Brand</h4>
                    <h4>Type of Fuel : @Model.Vehicle.TypeOfFuel</h4>
                    <h4>Color : @Model.Vehicle.VehicleColor</h4>
                    <h4>Vehicle Equipment : @Model.Vehicle.VehicleEquipment</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Vehicle.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="home" asp-action="delete" asp-route-id="@Model.Vehicle.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    <script src="~/js/CustomScript.js"></script>
}
