@model HomeDetailsViewModel

@{ 
ViewBag.Title = "Add Vehicle";
}

<form asp-controller="Home" asp-action="Create" method="post">
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="Vehicle.LicencePlateNumber" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <input asp-for="Vehicle.LicencePlateNumber" class="form-control" />
            <span asp-validation-for="Vehicle.LicencePlateNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="Vehicle.ModelName" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <input asp-for="Vehicle.ModelName" class="form-control" />
            <span asp-validation-for="Vehicle.ModelName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="Vehicle.Brand" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <select asp-for="Vehicle.Brand" asp-items="Html.GetEnumSelectList<Brand>()" class="form-select form-select-sm-2"></select>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="Vehicle.TypeOfFuel" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <select asp-for="Vehicle.TypeOfFuel" asp-items="Html.GetEnumSelectList<TypeOfFuel>()" class="form-select form-select-sm-2"></select>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <label asp-for="VehicleColor" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
        <div class="col-sm-10">
            <select asp-for="Vehicle.VehicleColor" asp-items="Html.GetEnumSelectList<VehicleColor>()" class="form-select form-select-sm-2"></select>
        </div>
    </div>
    <div>
        <div class="form-group row" style="margin-top:5px">
            <label asp-for="VehicleEquipment" class="col-sm-2 col-form-label" style="margin-top:5px"></label>
            <div class="col-sm-10">
                <select asp-for="Vehicle.VehicleEquipment" asp-items="Html.GetEnumSelectList<VehicleEquipment>()" class="form-select form-select-sm-2"></select>
            </div>
        </div>
    </div>
    <div class="form-group row" style="margin-top:5px">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>